@model Models.Entities.Product

<div>
    <h5><strong>Name:</strong> @Model.Name</h5>
    <p><strong>ID:</strong> @Model.Id</p>
    <p><strong>SKU:</strong> @Model.SKU</p>
    <p><strong>Base Price:</strong> @Model.BasePrice</p>
    <p><strong>MRP:</strong> @Model.MRP</p>
    <p><strong>Category:</strong> @Model.Category?.Name</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Currency:</strong> @Model.Currency</p>
    <p><strong>Manufactured Date:</strong> @Model.ManufactureDate.ToString("yyyy-MM-dd")</p>
    <p><strong>Expire Date:</strong> @Model.ExpireDate.ToString("yyyy-MM-dd")</p>
</div>